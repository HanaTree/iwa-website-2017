<body>
	<% include partials/header %>
	<main>      
    <div class="container">
      <h1>Sponsor Form Submission</h1>
      <p>Please submit your form here.</p>
      <form id="sponsor_form" action="/submit/sponsor" method="post" class="col s12 l6" enctype="multipart/form-data">

      <div class="row">
        <div class="s12 l6"><h6 style='color:#009ee7' class="col l2">Last Name:</h6>
          <p class="col l3">
            <input name="last_name" type="text" id="last_name" maxlength="40" required/>
          </p>
        </div>
      </div>
	
<div class="row">
<div class="col l2">
  <h6 style='color:#009ee7'>File</h6>
  <p style="font-size: 0.9em; color:#009ee7">(MS Word or PDF Only)</p>
</div>
  
  <div class="file-field input-field">

    <div class="file-path-wrapper col l5 s6">
      <input class="file-path validate" type="text" placeholder="Your file name will appear here..">
    </div>
    <div class="btn-flat"><a>
      <span>Select File</span>
      <input type="file" name="sponsor_file" required></a>
    </div>
  </div>
</div>
<br>
<button class="waves-effect waves-light offset-s2 light-blue accent-4 btn" style='margin-left: 40%'>Submit</button>
</form>
</div>
</main>
